<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="120dp"
        android:layout_height="116dp"
        android:layout_margin="5dp"
        android:layout_weight="25"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nume"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="55"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/addtocart"
        app:layout_constraintStart_toEndOf="@+id/ImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriere"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="55"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/pret"
        app:layout_constraintStart_toEndOf="@+id/ImageView"
        app:layout_constraintTop_toBottomOf="@+id/nume" />

    <Button
        android:id="@+id/addtocart"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="20"
        android:alpha="100"
        android:background="@drawable/addtocart"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/descriere"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/nume"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pret"
        android:layout_width="65dp"
        android:layout_height="66dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="20"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/descriere"
        app:layout_constraintTop_toBottomOf="@+id/nume" />

</android.support.constraint.ConstraintLayout>